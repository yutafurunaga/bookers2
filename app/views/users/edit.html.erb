<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <h3>Name</h3>
       <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>
     <div class="form-group">
         <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <h3>Introduction</h3>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User" %>
      </div>
      <% end %>
    </div>
   </div>
</div>